{% extends 'admin/template.twig' %}

{% block content %}
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Supplier</h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
    <div class="col-lg-8">
      <div class="panel panel-default">
        <div class="panel-heading">
          Edit Supplier
        </div>
        <form action="" method="POST">
          <div class="panel-body">
            <div class="form-group">
              <label for="">Nama Supplier</label>
              <input type="text" name="nama_supplier" value="{{rs.nama_supplier}}" class="form-control" placeholder="Nama Supplier" required="">
            </div>
            <div class="row">
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="">Jenis Usaha</label>
                  <input type="text" name="jenis_usaha" value="{{rs.jenis_usaha}}" class="form-control" placeholder="Jenis Usaha" required="">
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="">Nomor Telepon</label>
                  <input type="number" name="telepon" value="{{rs.telepon}}" class="form-control" placeholder="08xx" required="">
                </div>
              </div>
            </div>
            <div class="form-group">
              <label for="">Kota</label>
              <select name="kota_id" class="form-control select2" required="">
                {% for k in kota %}
                  <option value="{{k.kota_id}}"{% if rs.kota_id==k.kota_id %} selected=""{% endif %}>{{k.tipe}} {{k.nama_kota}}</option>
                {% endfor %}
              </select>
            </div>
            <div class="form-group">
              <label for="">Alamat</label>
              <textarea name="alamat" class="form-control" rows="4" placeholder="Alamat" required="">{{rs.alamat}}</textarea>
            </div>
          </div>
          <div class="panel-footer">
            <button type="submit" class="btn btn-success">Simpan</button>
            &nbsp; <a href="{{BASEURL}}/admin/supplier" class="btn btn-default">Batal</a>
            <a href="{{BASEURL}}/admin/supplier/hapus/{{rs.supplier_id}}" class="btn btn-danger pull-right" onclick="return confirm('Anda yakin ingin hapus data ?')">Hapus</a>
          </div>
        </form>
      </div>
    </div>
  </div>
{% endblock %}